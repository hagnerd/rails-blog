<%= form_with model: @article, local: true do |form| %>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_message.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
  <%= form.label :title %>
  <br />
  <%= form.text_field :title %>
  </p>

  <p>
  <%= form.label :body %>
  <br />
  <%= form.text_area :body %>
  </p>

  <p>
  <%= form.label :tag_list %>
  <br />
  <%= form.text_field :tag_list %>
  </p>

  <p>
  <%= form.submit %>
  </p>
<% end %>

